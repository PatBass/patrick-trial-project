.step-page input[type=submit], .step-page input[type=reset] {
	height:auto;
}
.step-page input[disabled=disabled]  {
	border: 0;
}
.step-page .choice input[type=radio]{
	margin:.8em .4em 0 0;
}

.step-page .output{
	display:inline-block;
	margin-top:.95em;
}
.step-page table {
	width: 100%;
}
.step-page td {
	padding-left: 2em;
	padding-right: 2em;
}
.step-page thead th:not(:first-child) {
	max-width: 2em;
	text-align:center;
}
.step-page tbody th {
	font-weight: normal;
}
.step-page label , .step-page .label , .step-page input{
	display: block;
	float: left;
	margin-bottom: 2px;
	line-height:3em;
}
.step-page label, .step-page .label {
	text-align: right;
	padding-right: 10px;
	min-width: 31.5em;
	width: 31.5em;
}
.step-page label.choice {
	text-align: left;
	min-width:1em;
	width: auto;
	font-weight:normal;
	margin-right:1.2em;
}

.step-page .post-note {
	clear: both;
	position: relative;
	top: -10px;
	margin: 0;
	padding-top: 0;
	width:100%; 
	font-size: 0.7em !important;
}
.step-page .error {
	color: #c60000;
	font-weight: bold;
}
.step-page div.error{
	clear:both;
	text-align:right;
}
.step-page .emphasized {
	color: #00529e;
	font-weight: bold;
}
.step-page .explanation {
	color: #00529e;
	font-weight: bold;
	float:right;
	width: 12em;
	margin-top:.95em;
}

.step-page br  {
	clear: both;
}
.clearer {
    clear: both;
    float: none;
	padding:0;
	margin:0;
}
table.pdf-footer {
	width: 100%
}
table.pdf-footer td:first-child{
	text-align: left;
}
table.pdf-footer td:last-child{
	text-align: right;
}
</style>
