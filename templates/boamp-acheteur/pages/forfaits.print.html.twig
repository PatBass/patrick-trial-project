}
.step-page input[type=money]  {
	max-width: 8em;
	width: 8em;
	font-size:1em;
	height:1.9em;
}
.step-page input[class=date], .step-page input[type=date] {
	max-width: 6.2em !important;
	width: 6.2em;
}
.step-page input[class~=date].error, .step-page input[type=date].error {
